<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BalanceManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layoutDirection">ltr</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_margin">10dp</item>
        <item name="boxStrokeColor">@color/neutral</item>
        <item name="strokeColor">@color/neutral</item>
        <item name="color">@color/neutral</item>
        <item name="android:textColor">@color/neutral</item>
    </style>

    <style name="DropDownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="DropDownStyleLight" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_margin">10dp</item>
        <item name="boxStrokeColor">@color/neutral</item>
        <item name="strokeColor">@color/neutral</item>
        <item name="color">@color/neutral</item>
        <item name="android:textColor">@color/neutral</item>
        <item name="endIconTint">@color/neutral</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#171616</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.BalanceManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BalanceManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BalanceManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>